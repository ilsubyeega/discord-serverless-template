{
    "compilerOptions": {
        "target": "es2019",
        "outDir": "build",
        "module": "commonjs",
        "lib": [
            "es2019",
            "ES2020",
            "dom"
        ],
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true
    }
}